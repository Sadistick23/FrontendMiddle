{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2016", "es2017.object"],
    "typeRoots": ["node_modules/@types", "./src/app/types", "src/app/types", "app/types"],
    "types": ["types.d.ts"],
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["**/*.js", "**/*.ts", "**/*.tsx", "types.d.ts",
    "src/app/types/types.d.ts"
  ]
}